import $assert;
import $core;

def $test_simple_ensure() {
  var $v := 9;
  $assert:equals(10, with_escape $escape do {
    try {
      $assert:equals(9, $v);
      10;
    } ensure {
      $v := 7;
    }
  });
  $assert:equals(7, $v);
  $assert:equals(11, with_escape $escape do {
    try {
      $assert:equals(7, $v);
      $escape(11);
      12;
    } ensure {
      $v := 5;
    }
  });
  $assert:equals(5, $v);
}

do {
  $test_simple_ensure();
}
