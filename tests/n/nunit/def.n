import $assert;
import $core;

def $test_def_value() {
  # The value of a definition is the value of its body, in the trivial case
  # null.
  def $v0 := { def $x0 := 0; }
  $assert:equals(null, $v0);
  def $v1 := { def $x1 := 1; $x1; }
  $assert:equals(1, $v1);
}

def $main() {
  $test_def_value();
}

entry_point $main();
