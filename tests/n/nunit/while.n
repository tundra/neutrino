import $assert;
import $core;

def $test_while_call() {
  var $i := 0;
  @core:while(fn => $i < 10, fn {
    $assert:that($i < 10);
    $i := $i + 1;
  });
  $assert:equals(10, $i);
  $i := 0;
  def $v := @core:while(fn => $i < 10, fn => $i := $i + 1);
  $assert:equals(10, $i);
  $assert:equals(null, $v);
}

def $test_while_syntax() {
  var $i := 0;
  while $i < 10 do {
    $assert:that($i < 10);
    $i := $i + 1;
  }
  $assert:equals(10, $i);
  $i := 0;
  def $v := (while $i < 10 do $i := $i + 1);
  $assert:equals(10, $i);
  $assert:equals(null, $v);
}

do {
  $test_while_call();
  $test_while_syntax();
}
