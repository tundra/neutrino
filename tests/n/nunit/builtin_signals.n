import $assert;
import $core;

def $test_array_bounds() {
  def $arr := @core:Tuple.new(3);
  var $clicks := 0;
  $assert:equals(4, try {
    try {
      $arr[4];
      $assert:fail();
    } ensure {
      $assert:equals(2, $clicks := $clicks + 1);
    }
  } on.out_of_bounds($i) {
    $assert:equals(1, $clicks := $clicks + 1);
    $i;
  });
  $assert:equals(2, $clicks);
}

do {
  $test_array_bounds();
}
